{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitReturns": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@domain/*": ["domain/*"],
            "@infraestructure/*": ["infraestructure/*"],
            "@data/*": ["data/*"],
            "@api/*": ["api/*"],
            "@config/*": ["config/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts"]
}
